{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["esnext"],
    "target": "es2020",
    // "moduleResolution": "node",
    // "baseUrl": ".",
    // "paths": {
    //   "*": ["node_modules/*", "types/*"]
    // },
    "sourceMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "src"
  },
  "include": ["./src"]
}
